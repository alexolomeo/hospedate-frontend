---
import ListingDetailInfoSkeleton from '@/components/React/Common/Skeleton/ListingDetailInfoSkeleton';
import TitleH1Skeleton from '@/components/React/Common/Skeleton/TitleH1Skeleton';
---

<section
  class="mx-auto max-w-4xl animate-pulse px-5 pt-6 pb-22 lg:max-w-4xl xl:max-w-6xl 2xl:max-w-7xl"
>
  <div class="flex items-center justify-between py-10">
    <div class="flex-1"><TitleH1Skeleton /></div>
    <div class="flex space-x-2"></div>
  </div>

  <div class="grid grid-cols-1 gap-6 py-10 md:grid-cols-10">
    <div class="col-span-1 space-y-8 md:col-span-6">
      <ListingDetailInfoSkeleton />
      <div class="space-y-3">
        <div class="bg-base-300 h-5 w-40 rounded"></div>
        <div class="bg-base-300 h-4 w-full rounded"></div>
        <div class="bg-base-300 h-4 w-11/12 rounded"></div>
        <div class="bg-base-300 h-4 w-5/6 rounded"></div>
      </div>
      <div class="space-y-3">
        <div class="bg-base-300 h-5 w-40 rounded"></div>
        <div class="bg-base-300 h-64 rounded-xl"></div>
      </div>
    </div>
    <div class="sticky top-20 self-start py-8 md:col-span-4">
      <div class="bg-base-300 h-[320px] rounded-3xl"></div>
    </div>
  </div>
</section>
