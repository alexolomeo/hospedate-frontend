---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import Footer from '@/components/Astro/Footer.astro';
import Header from '@/components/Astro/Header.astro';
import GoogleAnalytics from '@/components/Astro/GoogleAnalytics.astro';
import ProtectedGate from '@/components/React/Auth/ProtectedGate';
import { detectLanguage } from '@/utils/i18n';
import type { PolicyReqs } from '@/policies/authPolicy';
import GlobalToastProvider from '@/components/ui/GlobalToastProvider';
import GlobalFCMProvider from '@/components/ui/FCMProvider';
import TimezoneBootstrap from '@/components/React/Utils/TimezoneBootstrap';

const headers = Astro.request.headers;
const url = new URL(Astro.request.url);
const lang = detectLanguage(headers, url);

if (url.searchParams.get('lang')) {
  Astro.response.headers.set(
    'Set-Cookie',
    `lang=${lang}; Path=/; HttpOnly; SameSite=Lax;`
  );
}

interface Props {
  title: string;
  requires?: PolicyReqs;
  showFooter?: boolean;
  isHosting?: boolean;
  isActions?: boolean;
}

const {
  title,
  requires = {},
  showFooter = true,
  isHosting = false,
  isActions = false,
} = Astro.props;
---

<html lang={lang} data-theme="light" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="icon"
      type="image/svg+xml"
      sizes="16x16"
      href="/favicon-16x16.svg"
    />
    <link rel="apple-touch-icon" href="/apple-touch-icon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body class="bg-base-100 flex min-h-screen flex-col">
    <Header isHosting={isHosting} isActions={isActions} />

    <main class="flex flex-1 flex-col">
      <!-- Optional: skeleton simple mientras valida -->
      <div id="protected-fallback" class="p-6"></div>
      <div id="protected-content" style="display:none">
        <slot />
      </div>

      <ProtectedGate
        client:load
        requires={requires}
        fallbackId="protected-fallback"
        contentId="protected-content"
      />
    </main>

    {showFooter && <Footer />}

    <GlobalToastProvider client:load />
    <GlobalFCMProvider client:load lang={lang} />
    <TimezoneBootstrap client:load />
    <script>
      import { sessionService } from '@/services/SessionService';
      import { AuthEventEmitter } from '@/utils/authEventEmitter';
      sessionService.initClient();
      const go = (path: string) => {
        if (window.location.pathname !== path) window.location.replace(path);
      };
      AuthEventEmitter.on('route.forbidden', () => go('/403'));
      AuthEventEmitter.on('route.notfound', () => go('/404'));
      AuthEventEmitter.on('auth.unrecoverable', () => go('/500'));
    </script>

    <slot name="scripts" />
    <script src="../scripts/analytics-tracker.ts"></script>
    <GoogleAnalytics />
  </body>
</html>
