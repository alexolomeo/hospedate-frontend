---
import MainLayout from '@/layouts/MainLayout.astro';
import { detectLanguage, getTranslation } from '@/utils/i18n';

const lang = detectLanguage(Astro.request.headers, new URL(Astro.request.url));
const t = getTranslation(lang);
---

<MainLayout title={t.forgotPassword.resetExpiredPage.title}>
  <div class="space-y-6 py-20 text-center">
    <h1 class="text-primary text-lg font-normal">
      {t.forgotPassword.resetExpiredPage.heading1}
      <span class="font-bold">{t.forgotPassword.resetExpiredPage.heading2}</span
      >
      {t.forgotPassword.resetExpiredPage.heading3}
    </h1>

    <div class="flex justify-center">
      <img
        src="/images/pages/404.webp"
        alt={t.forgotPassword.resetExpiredPage.illustrationAlt}
        class="h-60 w-60"
      />
    </div>

    <div class="flex justify-center">
      <p class="max-w-3xl text-sm font-normal md:text-lg">
        <span class="text-primary">
          {t.forgotPassword.resetExpiredPage.description1}
        </span>
        {t.forgotPassword.resetExpiredPage.description2}
      </p>
    </div>

    <a href="/" class="btn btn-primary rounded-full py-4">
      {t.forgotPassword.resetExpiredPage.backToHome}
    </a>
  </div>
</MainLayout>
