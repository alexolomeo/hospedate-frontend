---
import MainLayout from '@/layouts/MainLayout.astro';
import { detectLanguage, getTranslation } from '@/utils/i18n';
const lang = detectLanguage(Astro.request.headers, new URL(Astro.request.url));
const t = getTranslation(lang);
---

<MainLayout title={t.unrecoverable.title}>
  <div class="py-20 text-center">
    <h1 class="mb-4 text-4xl font-bold">{t.unrecoverable.heading}</h1>
    <p class="mb-6">
      {t.unrecoverable.description}
    </p>
    <a
      href="/"
      data-astro-reload
      class="inline-block rounded bg-blue-500 px-4 py-2 text-white transition hover:bg-blue-600"
    >
      {t.unrecoverable.backToHome}
    </a>
  </div>
</MainLayout>
