---
import MainLayout from '@/layouts/MainLayout.astro';
import { detectLanguage, getTranslation } from '@/utils/i18n';
import ResetPasswordForm from '@/components/React/Auth/ForgotPassword/ResetPasswordForm';

const lang = detectLanguage(Astro.request.headers, new URL(Astro.request.url));
const t = getTranslation(lang);

const token = Astro.url.searchParams.get('token') ?? '';
---

<MainLayout title={t.forgotPassword.title}>
  <ResetPasswordForm client:load token={token} lang={lang} />
</MainLayout>
