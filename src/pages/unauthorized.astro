---
import MainLayout from '@/layouts/MainLayout.astro';
import UnauthorizedPage from '@/components/React/Common/UnauthorizedPage.tsx';
import { detectLanguage, getTranslation } from '@/utils/i18n';

const headers = Astro.request.headers;
const url = new URL(Astro.request.url);
const lang = detectLanguage(headers, url);
const t = getTranslation(lang);
---

<MainLayout
  title={t.unauthorized?.title || 'No Autorizado'}
  isSearch={false}
  isActions={false}
  showFooter={false}
>
  <UnauthorizedPage t={t} client:idle />
</MainLayout>
