---
import AccountSection from '@/components/React/Host/AccountSection';
import { detectLanguage, getTranslation } from '@/utils/i18n';
import ProtectedLayout from '@/layouts/ProtectedLayout.astro';

const lang = detectLanguage(Astro.request.headers, new URL(Astro.request.url));
const t = getTranslation(lang);
const title = t.hosting.pageTitles.dashboard;
---

<ProtectedLayout title={title} isActions={true}>
  <AccountSection client:only="react" lang={lang} />
</ProtectedLayout>
