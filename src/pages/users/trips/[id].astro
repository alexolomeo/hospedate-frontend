---
import TripDetailPanel from '@/components/React/Trips/TripDetailPanel';
import { detectLanguage, getTranslation } from '@/utils/i18n';
import ProtectedLayout from '@/layouts/ProtectedLayout.astro';

const { id } = Astro.params;
const lang = detectLanguage(Astro.request.headers, new URL(Astro.request.url));
const t = getTranslation(lang);
const title = t.tripDetail.pageTitle;
---

<ProtectedLayout title={title}>
  <div
    class="flex flex-col gap-8 bg-white px-4 pt-8 pb-24 sm:px-6 sm:pt-10 md:px-12 md:pt-12 xl:px-[140px]"
  >
    <TripDetailPanel
      client:only="react"
      lang={lang}
      t={t}
      tripId={id}
      isHost={false}
    />
  </div>
</ProtectedLayout>
